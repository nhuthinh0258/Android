<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aca383"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:padding="40px"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên"
            android:textSize="75px"
            android:textColor="@color/black"
            android:id="@+id/textviewemployeename">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã nhân viên:"
                android:textSize="50px"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/textviewemployeecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="50px"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:layout_marginRight="15px"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="75px"
        android:background="@drawable/ic_baseline_view_list_24"
        android:id="@+id/employeeinfomation">
    </ImageButton>
    <ImageButton
        android:layout_marginRight="15px"
        android:layout_marginLeft="15px"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="75px"
        android:background="@drawable/ic_baseline_update_24"
        android:id="@+id/employeeupdate">
    </ImageButton>
    <ImageButton
        android:layout_marginLeft="15px"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="75px"
        android:background="@drawable/ic_baseline_delete_24"
        android:id="@+id/employeedelete">
    </ImageButton>
</LinearLayout>